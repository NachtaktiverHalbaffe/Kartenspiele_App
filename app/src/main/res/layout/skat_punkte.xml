<?xml version="1.0" encoding="utf-8"?>
<TableRow
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/skat_punkte"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_column="1"
        android:text="00"
        android:textColor="@color/textcolorDark"
        android:textSize="15sp"
        android:id="@+id/skat_punkte1"/>

    <TextView
        android:layout_column="2"
        android:text="00"
        android:textColor="@color/textcolorDark"
        android:textSize="15sp"
        android:id="@+id/skat_punkte2"/>

    <TextView
        android:layout_column="3"
        android:text="00"
        android:textColor="@color/textcolorDark"
        android:textSize="15sp"
        android:id="@+id/skat_punkte3"/>

    <TextView
        android:layout_column="4"
        android:text="00"
        android:textColor="@color/textcolorDark"
        android:textSize="15sp"
        android:id="@+id/skat_punkte4"/>

    <ImageView
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cards_club"
        android:layout_gravity="left"
        android:layout_column="5"
        android:tint="@color/textcolorDark"
        android:id="@+id/punkt_gespielt"
        android:textColor="@color/textcolorDark"
        />

    <TextView
        android:layout_column="6"
        android:text="00"
        android:textColor="@color/textcolorDark"
        android:textSize="15sp"
        android:id="@+id/skat_boni"/>

</TableRow>