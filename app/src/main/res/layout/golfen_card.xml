<?xml version="1.0" encoding="utf-8"?>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/golfen_cardview"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_alignParentStart="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="844dp"
        android:layout_height="wrap_content"
        card_view:layout_editor_absoluteX="1dp">

        <TableLayout
            android:id="@+id/golfen_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/golfen_titel">

            <TableRow
                android:id="@+id/golfen_card_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/golfen_spieler1"
                    android:layout_column="1"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 1"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler2"
                    android:layout_column="2"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 2"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler3"
                    android:layout_column="3"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 3"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler4"
                    android:layout_column="4"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 4"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler5"
                    android:layout_column="5"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 5"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler6"
                    android:layout_column="6"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 6"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler7"
                    android:layout_column="7"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 7"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/golfen_spieler8"
                    android:layout_column="8"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 8"
                    android:textColor="@color/textcolorDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>

        <TextView
            android:id="@+id/golfen_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Spielbezeichnung"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/golfen_table"
            app:layout_constraintTop_toTopOf="parent"
            card_view:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>