<?xml version="1.0" encoding="utf-8"?>

    <com.google.android.material.card.MaterialCardView
    android:id="@+id/skat_cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_alignParentStart="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="461dp"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/skat_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skat_titel">

            <TableRow
                android:id="@+id/skat_card_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/skat_spieler1"
                    android:layout_column="1"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 1"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skat_spieler2"
                    android:layout_column="2"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 2"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skat_spieler3"
                    android:layout_column="3"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 3"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skat_spieler4"
                    android:layout_column="4"
                    android:layout_marginRight="4dp"
                    android:text="Spieler 4"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skat_spieler_gespielt"
                    android:layout_column="5"
                    android:layout_marginRight="4dp"
                    android:text="Gespielt"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="6"
                    android:layout_marginRight="4dp"
                    android:text="Gewinnstufe"
                    android:textColor="@color/textcolorDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/skat_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Spielbezeichnung"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/skat_table"
            app:layout_constraintTop_toTopOf="parent"
            card_view:ignore="NotSibling" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
